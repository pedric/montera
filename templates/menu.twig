{% if menu %}
	<ul id="menu" class="vertical medium-horizontal menu align-right" data-responsive-menu="drilldown medium-dropdown">
	{% for item in menu.items %}
		<li class="menu-item {% if item.has_sub %}has-sub-menu{% endif %} {{ item.classes | join(' ') }}">
			<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>

			{% if item.children %}
				<!-- <div class="arrow"></div> -->
    		<ul class="sub-menu">
					{% for child in item.children %}
		          <li>
		              <a href="{{ child.link }}">{{ child.title }}</a>
		          </li>
		      {% endfor %}
				</ul>
			{% endif %}

		</li>
	{% endfor %}
	</ul>
{% endif %}
